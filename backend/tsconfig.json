{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist/js", //outDir: tells the compiler to put the compiled code into the dist/js folder.
    "rootDir": "src", //rootDir: informs TypeScript to compile every .ts file located in the src folder
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], //include: tells the compiler to include files that are in the src directory and sub-directory
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"] //exclude: will exclude the files or folders passed in the array during compile-time
}